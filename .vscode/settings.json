{
    "workbench.settings.editor": "json",
    "files.exclude": {
        "**/.git": false,         // this is a default value
        "**/.DS_Store": false,    // this is a default value

        "**/node_modules": false, // this excludes all folders 
                                // named "node_modules" from 
                                // the explore tree

        // alternative version
        "node_modules": false    // this excludes the folder 
                                // only from the root of
                                // your workspace 
    }
}